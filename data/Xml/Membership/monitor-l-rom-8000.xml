            <function>qled</function>
            <pos>25, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>7</value>
            <function load="show" cycle="show">bitled</function>
            <pos>194, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>6</value>
            <function load="show" cycle="show">bitled</function>
            <pos>228, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
