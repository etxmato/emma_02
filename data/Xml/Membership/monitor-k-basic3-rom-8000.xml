<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Membership Card</name>
        <config>Monitor, BASIC3, Adventureland, Front panel K, 32KB ROM - 32KB NVRAM</config>
        <clock>4.0</clock>
        <boot>0x8000</boot>
        <init ef="1">1</init>
        <init ef="2">1</init>
        <init ef="3">1</init>
        <init ef="4">1</init>
        <dirname>Membership</dirname>
    </system>

    <frontpanel init="on">
        <out>4, 5, 6, 7</out>
        <in>4, 5, 6, 7</in>
        <ef type="in">4</ef>
        <size>480, 299</size>
        <item>
            <type>png</type>
            <filename dirname="images">membership3.png</filename>
        </item>
        <item>
            <type form="largegreen">led</type>
            <function>qled</function>
            <pos>25, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>7</value>
            <function load="show">bitled</function>
            <pos>194, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>6</value>
            <function load="show">bitled</function>
            <pos>228, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>5</value>
            <function load="show">bitled</function>
            <pos>262, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>4</value>
            <function load="show">bitled</function>
            <pos>296, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>3</value>
            <function load="show">bitled</function>
            <pos>330, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>2</value>
            <function load="show">bitled</function>
            <pos>364, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>1</value>
            <function load="show">bitled</function>
            <pos>398, 136</pos>
        </item>
        <item>
            <type form="large">led</type>
            <value>0</value>
            <function load="show">bitled</function>
            <pos>432, 136</pos>
        </item>
        <item>
            <type form="round" color="red">push</type>
            <init>up</init>
            <function>in_switch</function>
            <pos>25, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <function>wait</function>
            <init>up</init>
            <pos>59, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <function>clear_run</function>
            <init>up</init>
            <pos>93, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <function>mp</function>
            <init>up</init>
            <pos>127, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <value>7</value>
            <function>bitswitch</function>
            <pos>194, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <value>6</value>
            <function>bitswitch</function>
            <pos>228, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <value>5</value>
            <function>bitswitch</function>
            <pos>262, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <value>4</value>
            <function>bitswitch</function>
            <pos>296, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <value>3</value>
            <function>bitswitch</function>
            <pos>330, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <value>2</value>
            <function>bitswitch</function>
            <pos>364, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <value>1</value>
            <function>bitswitch</function>
            <pos>398, 210</pos>
        </item>
        <item>
            <type>switch</type>
            <value>0</value>
            <function>bitswitch</function>
            <pos>432, 210</pos>
        </item>
    </frontpanel>

    <memory>
        <rom type="gui">
            <start>0x8000</start>
            <end>0xFFFF</end>
            <pulldown mask="MS20*.bin">Membership</pulldown>
            <filename verify="true">MS20VTJ.bin</filename>
        </rom>

        <nvram type="gui">
            <start>0x0000</start>
            <end>0x7FFF</end>
            <dump>ramdump.bin</dump>
            <mp>switch</mp>
        </nvram>
    </memory>
    
    <vt type="vt100" connection="serial">
        <font>vt100.bin</font>
        <ef pol="rev">3</ef>
        <q></q>
        <caps />
        <baud type="receive" correction="2">9600</baud>
        <baud type="transmit" correction="2">9600</baud>
        <border>0x0</border>
        <color type="fore">0, 255, 0</color>
        <color type="back">0, 0x40, 0</color>
        <color type="high">0, 0xff, 0</color>
    </vt>

    <debugger>
        <scrt mode="on">
            <call reg="4">0xB6E8</call>
            <return reg="5">0xACF2</return>
        </scrt>
    </debugger>

    <hexmodem>
    </hexmodem>

    <basic>
        <pload>rca</pload>
        <defus>0x0181</defus>
        <eop>0x0183</eop>
        <string>0x0192</string>
        <array>0x0194</array>
        <eod>0x0199</eod>
        <ram>0x0300</ram>
    </basic>

    <locations>
        <!-- key input -->
        <key_input>0x8062, 0x88a3, 0x8b09</key_input>

        <!-- Machine states -->
        <reset_state command="&#xD;BC">0x8b00</reset_state>
        <ut_state command="BC">0x8b17</ut_state>
        <basic_state_cw command="C">0x95f6</basic_state_cw>
        <basic_state>0x9757</basic_state>
        <run_state>0xA776</run_state>

        <start_hexmodem_load>0x86fd, 0xc89a, 0x789a</start_hexmodem_load>
        <start_hexmodem_save reg="7" value="0x2fd">0x87DC</start_hexmodem_save>
        <start_hexmodem_save>0xc78c</start_hexmodem_save>
        <stop_modem>0x887B, 0xc830, 0x7830</stop_modem>
    </locations>

</emmaconfig>
