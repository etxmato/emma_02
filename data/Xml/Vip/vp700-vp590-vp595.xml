<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>COSMAC VIP</name>
        <config>VP700 Tiny BASIC, VP590 &amp; VP595</config>
        <clock>1.7609</clock>
        <boot>0</boot>
        <f12>stop</f12>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Vip</dirname>
    </system>
    
    <splash>
        <text>To start the VIP Operating System:&#xD;While keeping ‘C’ pressed, press ‘F12’ twice</text>
    </splash>

    <bootstrap>
        <address>0x8000</address>
        <out>4</out>
    </bootstrap>

    <memory>
        <rom>
            <start>0x8000</start>
            <end>0x81FF</end>
            <filename>vip.32.rom</filename>
        </rom>

        <guiram>
            <start>0x0000</start>
            <end>0x7FFF</end>
            <filename>VP700_Tiny_BASIC.bin</filename>
        </guiram>
    </memory>
    
    <video type="cdp1861">
        <out>1</out>
        <in>1</in>
        <ef>1</ef>
        <border>33x33</border>
     </video>

    <video type="cdp1862">
        <out type="back">5</out>
        <colorram>0xc000-0xdfff</colorram>
        <colortype>vip</colortype>
        <color type="white">255, 255, 255</color>
        <color type="red">255, 0, 0</color>
        <color type="blue">0, 0, 255</color>
        <color type="magenta">255, 0, 255</color>
        <color type="green">0, 255, 0</color>
        <color type="yellow">255, 255, 0</color>
        <color type="cyan">0, 255, 255</color>
        <color type="black">20, 20, 20</color>
        <color type="back_blue">0, 0, 128</color>
        <color type="back_black">0, 0, 0</color>
        <color type="back_green">0, 128, 0</color>
        <color type="back_red">128, 0, 0</color>
     </video>

    <keyboard type="ascii">
        <in>3</in>
        <ef>4</ef>
        <caps />
    </keyboard>

    <keypad type="latch">
        <out mask="0x0f">2</out>
        <ef pol="rev">3</ef>
        <auto>on</auto>
    </keypad>

    <cassette decks="1">
        <out>7</out>
        <ef>2</ef>
        <stopdelay>20</stopdelay>
    </cassette>

    <sound type="cdp1863">
        <out>3</out>
    </sound>

    <locations>
        <!-- key input -->
        <key_input>0x5cd</key_input>

        <!-- Machine states -->
        <reset_state></reset_state>
        <basic_state>0x6</basic_state>
        <run_state></run_state>

        <!-- Stop cassette -->
        <stop_cas>0x80c0, 0x80ed</stop_cas>
        
        <!-- Start SAVE, LOAD -->
        <start_cas_save>0x8091</start_cas_save>
        <start_cas_load>0x80c2</start_cas_load>
    </locations>

    <basic>
        <pload>tiny</pload>
        <defus>0x79</defus>
        <eop>0x24</eop>
        <ram>0x1140</ram>
    </basic>

    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0x000</code_start>
            <code_end>0xFFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>

