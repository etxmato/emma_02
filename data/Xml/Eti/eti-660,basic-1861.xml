<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>ETI-660</name>
        <config>CDP1861 - BASIC</config>
        <clock>1.773</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Eti</dirname>
    </system>

    <splash>
        <text>Press: 0, C, 0, 0, reset and 6 to start BASIC</text>
    </splash>

    <memory mask="0xfff">
         <rom>
            <start>0x0000</start>
            <end>0x03FF</end>
            <filename>eti-660_1861.bin</filename>
        </rom>

         <mainram>
             <start>0x0600</start>
             <end>0x0BFF</end>
         </mainram>

         <ram>
             <start>0x0400</start>
             <end>0x05FF</end>
        </ram>

         <rom>
            <start>0x0C00</start>
            <end>0x0FFF</end>
            <filename>BASIC1.bin</filename>
        </rom>
    </memory>
    
    <keypad type="hug">
        <!-- keypad definition for the hug1802 and eti-660
        <out>: write pia port
        <in>: read pia port
        <ef>: ef port for step key signal
        -->

        <out>2</out>
        <in>2</in>
        <ef>4</ef>
    </keypad>

    <video type="pixie">
        <in type="on">1</in>
        <in type="off">4</in>
        <ef>1</ef>
        <border>33x33</border>
        <color type="fore">255, 255, 255</color>
        <color type="back">0, 0, 0</color>
    </video>

    <sound type="cdp1863">
        <!-- sound definition using Q flag and output to latch tone frequency
        -->

        <out>4</out>
    </sound>

    <cassette decks="1">
        <ef>2</ef>
    </cassette>

    <locations>
        <stop_cas>0xfa</stop_cas>
        <start_cas_save>0x18B</start_cas_save>
        <start_cas_load>0x160</start_cas_load>
        
        <code_start_high>0x400</code_start_high>
        <code_start_low>0x401</code_start_low>
        <code_end_high>0x402</code_end_high>
        <code_end_low>0x403</code_end_low>
        <reg_end adjust="-1">0xe</reg_end>
    </locations>
    
    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0x400</code_start>
            <code_end>0xCFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>
