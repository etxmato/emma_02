        <scrt mode="on">
            <call reg="4">0xFFC6</call>
            <return reg="5">0xFFD8</return>
        </scrt>
        
        <assembler>
            <filename>mycode</filename>
            <code_start>0</code_start>
            <code_end>0x7FF</code_end>
        </assembler>
    </debugger>

