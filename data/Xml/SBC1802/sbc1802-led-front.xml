    <memory>
        <rom type="gui" mem_num="0">
            <mcr />
            <start>0</start>
            <end>0x7FFF</end>
            <pulldown mask="*.bin">SBC1802</pulldown>
            <filename verify="true">sbc1802.bin</filename>
        </rom>
        
        <nvram type="gui" mem_num="1">
            <mcr />
            <start>0</start>
            <end>0x7FFF</end>
            <dump>ramdump0.bin</dump>
        </nvram>

        <nvram mem_num="2">
            <mcr />
            <start>0</start>
            <end>0x7FFF</end>
            <dump>ramdump1.bin</dump>
        </nvram>
        
        <mcr max="8">
            <start>0</start>
            <end>0xFFFF</end>
            <out type="mcr" mask="0x7">0xfee7</out>
            <in type="bbat" mask="0x40">0xfee7</in>
            <map map_num="0"> <!-- BOOT -->
                <rom mem_num="0">
                    <start>0</start>
                    <end>0x7FFF</end>
                </rom>
                <rom mem_num="0">
                    <start>0x8000</start>
                    <end>0xFDFF</end>
                </rom>
                <nvram mem_num="2">
                    <start>0xFE00</start>
                    <end>0xFEDF</end>
                </nvram>
                <io mem_num="2">
                    <start>0xFEE0</start>
                    <end>0xFEFF</end>
                </io>
                <rom mem_num="0">
                    <start>0xFF00</start>
                    <end>0xFFFF</end>
                </rom>
            </map>
            <map map_num="5"> <!-- ROM1 -->
                <nvram mem_num="2">
                    <start>0</start>
                    <end>0x7FFF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0x8000</start>
                    <end>0xFDFF</end>
                </rom>
                <nvram mem_num="2">
                    <start>0xFE00</start>
                    <end>0xFEDF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0xFF00</start>
                    <end>0xFFFF</end>
                </rom>
            </map>
            <map map_num="4"> <!-- ROM0 -->
                <nvram mem_num="1">
                    <start>0</start>
                    <end>0x7FFF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0x8000</start>
                    <end>0xFDFF</end>
                </rom>
                <nvram mem_num="2">
                    <start>0xFE00</start>
                    <end>0xFEDF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0xFF00</start>
                    <end>0xFFFF</end>
                </rom>
            </map>
            <map map_num="7"> <!-- ELFOS -->
                <nvram mem_num="1">
                    <start>0</start>
                    <end>0x7FFF</end>
                </nvram>
                <nvram mem_num="2">
                    <start>0x8000</start>
                    <end>0xEFFF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0xF000</start>
                    <end>0xFDFF</end>
                </rom>
                <nvram mem_num="2">
                    <start>0xFE00</start>
                    <end>0xFEDF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0xFF00</start>
                    <end>0xFFFF</end>
                </rom>
            </map>
            <map map_num="6"> <!-- MICRODOS -->
                <nvram mem_num="1">
                    <start>0</start>
                    <end>0x7FFF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0x8000</start>
                    <end>0x87FF</end>
                </rom>
                <nvram mem_num="2">
                    <start>0x8800</start>
                    <end>0xFDFF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0xF000</start>
                    <end>0xFFFF</end>
                </rom>
                <nvram mem_num="2">
                    <start>0xFE00</start>
                    <end>0xFEDF</end>
                </nvram>
                <rom mem_num="0">
                    <start>0xFF00</start>
                    <end>0xFFFF</end>
                </rom>
            </map>
        </mcr>
    </memory>
  
    <iogroup>
        <out>1</out>
    </iogroup>
        
    <xmodem>
    </xmodem>

    <cdp1877>
        <out type="mien" mask="0x80">0xfee7</out>
        <out type="mask" addressmask="0xfffc">0xfef0</out>
        <out type="control" addressmask="0xfffc">0xfef4</out>
        <out type="page" addressmask="0xfffc">0xfef8</out>
        <in type="irq" mask="0x8">0xfee7</in>
        <in type="status" addressmask="0xfffc">0xfef0</in>
        <in type="polling" addressmask="0xfffc">0xfef4</in>
        <in type="vector" addressmask="0xfffc">0xfef8</in>
    </cdp1877>

    <vt type="vt100" connection="uart1854">
        <font>vt100.bin</font>
        <out type="register">2</out>
        <out type="control">3</out>
        <in type="register">2</in>
        <in type="status">3</in>
        <int>4</int>
        <ef type="int" iogroup="no">3</ef>
        <ef iogroup="no">4</ef>
        <baud type="receive">9600</baud>
        <baud type="transmit">9600</baud>
    </vt>

    <disk type="ide">
        <filename drive="0">sbc1802.dsk</filename>
        <filename drive="1">sbc1802-2.dsk</filename>
        <out type="select">5</out>
        <out type="write">6</out>
        <in type="status">5</in>
        <in type="read">6</in>
        <int>3</int>
        <tracks>512</tracks>
        <heads>4</heads>
        <sectors>26</sectors>
    </disk>

    <rtc type="cdp1879">
        <ef>2</ef>
        <base>0xfee8</base>
        <int>1</int>
    </rtc>
    
    <xmodem>
    </xmodem>

    <locations>
        <start_xmodem_save address="0x80, 0x81, 0x82, 0x83" value="0x78, 0x73, 0x62, 0x20">0x2079</start_xmodem_save> <!-- xsb -->
        <start_xmodem_load address="0x80, 0x81, 0x82, 0x83" value="0x78, 0x72, 0x62, 0x20">0x2093</start_xmodem_load> <!-- xrb -->
        <start_xmodem_load address="0x80, 0x81, 0x82" value="0x78, 0x72, 0x20">0x2119</start_xmodem_load> <!-- xr -->
        <start_ymodem_save address="0x80, 0x81, 0x82" value="0x79, 0x73, 0x20">0x2186</start_ymodem_save> <!-- ys -->

        <start_xmodem_load>0xefe6, 0xA11C</start_xmodem_load>
        <start_xmodem_save>0xefe3, 0xA140</start_xmodem_save>
    </locations>
    
    <basic>
