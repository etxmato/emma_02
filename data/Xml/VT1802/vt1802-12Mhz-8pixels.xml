        <pload>RCA</pload>
        <defus>0x8081</defus>
        <eop>0x8083</eop>
        <string>0x8092</string>
        <array>0x8094</array>
        <eod>0x8099</eod>
        <ram>0x8200</ram>
    </basic>

    <debugger>
        <scrt mode="on">
            <call reg="4">0x2301</call>
            <return reg="5">0x2313</return>
        </scrt>
        
