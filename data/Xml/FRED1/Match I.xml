<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>FRED 1</name>
        <config>Match I</config>
        <clock>1.00</clock>
        <cpu>system</cpu> 
        <boot dma="on">0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>FRED1</dirname>
    </system>

    <gui>
        <auto>on</auto>
        <turbo>off</turbo>
    </gui>

    <splash>
        <text>This game is for two players (1 and 2). The object is to find matching&#xD;pairs of symbols. Press card '0' to start the game. A 4 x 4 array of&#xD;symbols will flash on the screen. The 16 keyboard positions represent&#xD;symbol positions on the screen. Player 1 presses two keyboard positions&#xD;trying to find two matching symbols. If he finds two that match, they are&#xD;replaced by 1 on the screen. He then gets another turn. If he doesn't&#xD;find two matching symbols it is player 2's turn next. Turns alternate in&#xD;this fashion until all symbols have been matched. Players always get&#xD;extra turns for finding matching symbols. Count 1's and 2's showing to&#xD;determine the winner of the game. New game = reset/run.</text>
    </splash>

    <iogroup>
        <out>1</out>
    </iogroup>

    <frontpanel init="on">
        <size>500, 180</size>
        <item>
            <type size="small">push</type>
            <function type="full">reset</function>
            <label></label>
            <pos>35, 60</pos>
            <size>25, 25</size>
        </item>
        <item>
            <type>text</type>
            <label size="12">RESET</label>
            <pos>20, 88</pos>
        </item>
        <item>
            <type size="small">push</type>
            <function>run</function>
            <label></label>
            <pos>85, 60</pos>
            <size>25, 25</size>
        </item>
        <item>
            <type>text</type>
            <label size="12">RUN</label>
            <pos>80, 88</pos>
        </item>
        <item>
            <type>switch</type>
            <function>read</function>
            <init>down</init>
            <pos>135, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">READ</label>
            <pos>125, 88</pos>
        </item>
        <item>
            <type>switch</type>
            <function>cardswitch</function>
            <init>down</init>
            <pos>185, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">CARD</label>
            <pos>175, 88</pos>
        </item>
       <item>
            <type>switch</type>
            <function>power</function>
            <init>up</init>
            <pos>235, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">OFF</label>
            <pos>232, 88</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">STOP</label>
            <pos>42, 138</pos>
        </item>
        <item>
            <type>led</type>
            <function>stopled</function>
            <pos>55, 160</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">READY</label>
            <pos>120, 138</pos>
        </item>
        <item>
            <type>led</type>
            <function>readyled</function>
            <pos>140, 160</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">ERROR</label>
            <pos>205, 138</pos>
        </item>
        <item>
            <type>led</type>
            <function>errorled</function>
            <pos>225, 160</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">0</label>
            <pos>262, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>0</value>
            <function>bitled</function>
            <pos>262, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">1</label>
            <pos>228, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>1</value>
            <function>bitled</function>
            <pos>228, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">2</label>
            <pos>194, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>2</value>
            <function>bitled</function>
            <pos>194, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">3</label>
            <pos>160, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>3</value>
            <function>bitled</function>
            <pos>160, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">4</label>
            <pos>126, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>4</value>
            <function>bitled</function>
            <pos>126, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">5</label>
            <pos>92, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>5</value>
            <function>bitled</function>
            <pos>92, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">6</label>
            <pos>58, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>6</value>
            <function>bitled</function>
            <pos>58, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">7</label>
            <pos>24, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>7</value>
            <function>bitled</function>
            <pos>24, 15</pos>
        </item>
        
        <item>
            <type>text</type>
            <label size="12">Cards:</label>
            <pos>300, 10</pos>
        </item>
        <item>
            <type size="small">push</type>
            <value>0xff</value>
            <function>card</function>
            <label>0</label>
            <pos>300, 40</pos>
            <size>25, 25</size>
        </item>
    </frontpanel>

    <memory>
        <ram type="gui" mask="0x3ff">
            <start>0x0000</start>
            <end>0xFFFF</end>
            <pulldown mask="Match I.bin">FRED1</pulldown>
            <filename>Match I.bin</filename>
        </ram>
    </memory>
    
    <keypad type="fred">
        <iogroup>1</iogroup>
        <out>2</out>
        <in type="key" mode="1">0</in>
        <ef type="key" mode="1">1</ef>
        <mode>hex</mode>
    </keypad>

    <video type="fred">
        <iogroup>2</iogroup>
        <out>2</out>
        <border>33x33</border>
        <color type="fore">255, 255, 255</color>
        <color type="back">0, 0, 0</color>
     </video>

    <cassette type="fred">
        <iogroup>3</iogroup>
        <stoptone />
        <bootstart />
        <ef type="in" mode="2">1</ef>
        <ef type="run">2</ef>
        <ef type="error">4</ef>
        <in mode="2">0</in>
        <out type="mode">2</out>
        <out type="sound">3</out>
        <freq type="0">5200</freq>
        <freq type="1">6200</freq>
        <databits>8</databits>
        <threshold type="8bit">10</threshold>
        <threshold type="16bit">500</threshold>
        <threshold type="24bit">1000</threshold>
        <filename cassette="0"></filename>
    </cassette>

    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>fred.bin</filename>
            <code_start>0</code_start>
            <code_end>0x3FF</code_end>
        </assembler>
    </debugger>

</emmaconfig>
