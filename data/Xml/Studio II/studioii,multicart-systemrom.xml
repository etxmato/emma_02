<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>RCA Studio II</name>
        <config>40th Anniversary Multi-Cart, with system rom activated</config>
        <clock>1.76</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Studio2</dirname>
    </system>
    
    <frontpanel init="on">
        <size>315, 135</size>
        <item>
            <type>rot</type>
            <pos>70, 30</pos>
            <value>1</value>
            <function>ems</function>
        </item>
        <item>
            <type>text</type>
            <label size="12">MSB</label>
            <pos>18, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">0x-Fx</label>
            <pos>12, 75</pos>
        </item>
        <item>
            <type>rot</type>
            <pos>170, 30</pos>
            <value>0</value>
            <function>ems</function>
        </item>
        <item>
            <type>text</type>
            <label size="12">LSB</label>
            <pos>266, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">x0-xF</label>
            <pos>256, 75</pos>
        </item>
    </frontpanel>
    
    <memory mask="0xfff">
        <rom>
            <start>0</start>
            <end>0x3ff</end>
            <filename>studio2.rom</filename>
        </rom>

        <ems type="multicart">
            <start>0</start>
            <end>0</end>
            <start2>0x400</start2>
            <end2>0x7ff</end2>
            <start3>0xc00</start3>
            <end3>0xfff</end3>
            <filename>39sf040.auto.bin</filename>
        </ems>

        <ram>
            <start>0x800</start>
            <end>0x9ff</end>
        </ram>
    </memory>
    
    <video type="pixie">
        <out>1</out>
        <in>1</in>
        <ef>1</ef>
        <border>33x33</border>
        <color type="fore">255, 255, 255</color>
        <color type="back">0, 0, 0</color>
     </video>

    <keypad type="latch" pad="1">
        <out mask="0x0f">2</out>
        <ef pol="rev">3</ef>

        <keydef type="file" check="rom">keydefinition_studio.txt</keydef>
        
        <diagonal key1="2" key2="4">1</diagonal>
        <diagonal key1="2" key2="6">3</diagonal>
        <diagonal key1="4" key2="8">7</diagonal>
        <diagonal key1="6" key2="8">9</diagonal>
    </keypad>

    <keypad type="latch" pad="2">
        <out mask="0x0f">2</out>
        <ef pol="rev">4</ef>

        <diagonal key1="2" key2="4">1</diagonal>
        <diagonal key1="2" key2="6">3</diagonal>
        <diagonal key1="4" key2="8">7</diagonal>
        <diagonal key1="6" key2="8">9</diagonal>
    </keypad>

    <sound type="studio">
    </sound>

    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>studiocart</filename>
            <code_start>0x400</code_start>
            <code_end>0x7FF</code_end>
        </assembler>
    </debugger>

</emmaconfig>

