<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Netronics Elf II</name>
        <config>Super Monitor</config>
        <clock>1.76</clock>
        <boot>0x8000</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf</dirname>
    </system>
    
    <frontpanel type="netronics" init="on">
        <out>4</out>
        <in>4</in>
        <ef type="in">4</ef>
        <til>313</til>
    </frontpanel>

     <memory>
         <guirom>
             <start>0x8000</start>
             <end>0x80FF</end>
             <filename verify="true">supermon.hex</filename>
         </guirom>

         <guiram>
            <start>0x0000</start>
            <end>0x7FFF</end>
        </guiram>

     </memory>
    
    <cassette decks="1">
        <ef>2</ef>
    </cassette>
    
    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0</code_start>
            <code_end>0xFFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>
