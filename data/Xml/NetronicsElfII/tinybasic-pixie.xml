<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Netronics Elf II</name>
        <config>Tiny Basic, Pixie Video</config>
        <!-- Press return to start BASIC -->
        <clock>1.76</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf</dirname>
    </system>
    
    <splash>
        <dialog>TINY</dialog>
    </splash>

    <memory>
        <guiram>
            <start>0x0000</start>
            <end>0xEFFF</end>
            <pulldown mask="tiny*.*">Elf/TinyBasic</pulldown>
            <filename>netronic.tinyBasic.hex</filename>
        </guiram>

        <giant />

        <guirom>
            <start>0xF000</start>
            <end>0xF0FF</end>
            <pulldown mask="giantboard*.*">Elf</pulldown>
            <filename>giantboard.hex</filename>
        </guirom>
    </memory>
    
    <video type="pixie">
        <out>1</out>
        <in>1</in>
        <ef>1</ef>
        <border>33x33</border>
        <color type="fore">255, 255, 255</color>
        <color type="back">0, 0, 0</color>
     </video>

    <keyboard type="ascii">
        <in>7</in>
        <ef>3</ef>
        <caps />
    </keyboard>

    <printer>
        <out>3</out>
    </printer>
    
    <cassette decks="1">
        <ef>2</ef>
    </cassette>
    
    <basic>
        <pload>tiny</pload>
        <defus>0x79</defus>
        <eop>0x24</eop>
        <string>0</string>
        <array>0</array>
        <eod>0</eod>
        <ram>0xf40</ram>
    </basic>

    <locations>
        <!-- key input -->
        <key_input>0xab3, 0xbf</key_input>

        <!-- Machine states -->
        <reset_state command="&#xD;">0xbf</reset_state>
        <basic_state>0x0204</basic_state>
        <run_state></run_state>

        <!-- Stop cassette -->
        <stop_cas>0xA59, 0xA28</stop_cas>
        
        <!-- Start SAVE, LOAD -->
        <start_cas_save>0x9FD</start_cas_save>
        <start_cas_load>0x09FA</start_cas_load>

    </locations>

    <debugger>
        <scrt mode="on">
            <call reg="4">0x12a</call>
            <return reg="5">0x13c</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0x1000</code_start>
            <code_end>0x1FFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>

