<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>VIS1802</name>
        <config>NTSC</config>
        <clock>2.835</clock>
        <boot>0</boot>
        <init ef="1">1</init>
        <init ef="2">1</init>
        <init ef="3">1</init>
        <dirname>VIS1802</dirname>
    </system>
        
    <memory>
        <rom type="gui">
            <start>0</start>
            <end>0x7FFF</end>
            <pulldown mask="*.hex">VIS1802</pulldown>
            <filename verify="true">eprom_64.hex</filename>
        </rom>
        
        <ram type="gui">
           <start>0x8000</start>
           <end>0xF3FF</end>
        </ram>
    </memory>
  
    <flipflop>
        <out>1</out>
        <function number="0">iogroup</function>
        <function number="1">vis_mode</function>
        <function number="3">vis_pcb</function>
        <ef pol="rev" iogroup="no">4</ef>
    </flipflop>
        
    <video type="1870">
        <iogroup>1</iogroup>
        <pagesize type="ram" iogroup="no">0x3ff</pagesize>
        <charsize type="ram" iogroup="no">0x7ff</charsize>
        <graphicsize iogroup="no">0x1fff</graphicsize>
        <pcbmask>0xff</pcbmask>
        <maxcharlines>8</maxcharlines>
        <maxscreenlines>24</maxscreenlines>
        <mode>ntsc</mode>
        <int>2</int>
        <out type="int_reset">2</out>
        <ef type="display" iogroup="no">2</ef>
        <clock>5.670</clock>
        <border>4x4</border>
        <color num="0" type="mask">0,0,0</color>
        <color num="1" type="mask">0,0xFF,0</color>
        <color num="2" type="mask">0,0,0xFF</color>
        <color num="3" type="mask">0,0xFF,0xFF</color>
        <color num="4" type="mask">0xFF,0,0</color>
        <color num="5" type="mask">0xFF,0xFF,0</color>
        <color num="6" type="mask">0xFF,0,0xFF</color>
        <color num="7" type="mask">0xFF,0xFF,0xFF</color>
        <ctone num="0">0</ctone>
        <ctone num="1">28</ctone>
        <ctone num="2">77</ctone>
        <ctone num="3">105</ctone>
        <ctone num="4">150</ctone>
        <ctone num="5">194</ctone>
        <ctone num="6">227</ctone>
        <ctone num="7">255</ctone>
    </video>

    <dip>
        <iogroup>0</iogroup>
        <value>0xe7</value>
        <in>4</in>
    </dip>
        
    <keyboard type="ps2-89C4051">
        <iogroup>0</iogroup>
        <in>5</in>
        <ef iogroup="no">1</ef>
        <startup>D</startup>
        <int />
        <caps />
    </keyboard>

    <xmodem>
    </xmodem>

    <vt type="vt100" connection="uart1854">
        <show>no</show>
        <iogroup>0</iogroup>
        <font>vt100.bin</font>
        <out type="register">2</out>
        <out type="control">3</out>
        <in type="register">2</in>
        <in type="status">3</in>
        <ef iogroup="no" pol="rev">3</ef>
        <baud type="receive">9600</baud>
        <baud type="transmit">9600</baud>
    </vt>

    <locations>
        <start_xmodem_load>0x838</start_xmodem_load>
        <start_xmodem_save>0x804</start_xmodem_save>
        <stop_modem>0x86d, 0x217c, 0x22b7</stop_modem>
        <!--
        <keyinput>:
        0x1bc: wait for key on reset screen
        0x39a: wait for key in BASIC
        0x5344: wait for key in F&M BASIC
        -->
        <!--<key_input>0x1bc, 0x39a, 0x5344</key_input> -->
        
        <!-- Machine states -->
        <!--<reset_state command="A">0x1bc</reset_state>
        <basic_state address="0x42a0" value="0">0x39a, 0x5344</basic_state>
        <run_state>0x1f76, 0x2c00</run_state> -->

        <!-- Stop cassette -->
        <!--<stop_cas>0x1047</stop_cas> -->
        
        <!-- Start PSAVE, DSAVE, PLOAD, DLOAD -->
        <!--<start_cas_save>0x1672, 0x1675</start_cas_save>
        <start_cas_load>0x0e00</start_cas_load>
        <start_cas_dload>0x0e03</start_cas_dload> -->
        
        <!-- Save start/end during batch conversion -->
        <!--<batch_start_save>0x1bc, 0x39a</batch_start_save>
        <batch_end_save>0x14e1</batch_end_save> -->

    </locations>
    
    <basic>
        <pload>RCA</pload>
        <defus>0x8081</defus>
        <eop>0x8083</eop>
        <string>0x8092</string>
        <array>0x8094</array>
        <eod>0x8099</eod>
        <ram>0x8200</ram>
    </basic>

    <debugger>
        <scrt mode="on">
            <call reg="4">0x2301</call>
            <return reg="5">0x2313</return>
        </scrt>
        
        <assembler>
            <filename>mycode</filename>
            <code_start>0x8200</code_start>
            <code_end>0x91FF</code_end>
        </assembler>
    </debugger>

</emmaconfig>
