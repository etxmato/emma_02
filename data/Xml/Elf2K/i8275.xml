<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>COSMAC Elf 2000</name>
        <config>Intel 8275</config>
        <clock>3.5795</clock>
        <boot>0</boot>
        <init ef="1">1</init>
        <init ef="2">1</init>
        <init ef="3">1</init>
        <init ef="4">1</init>
        <dirname>Elf2K</dirname>
    </system>

    <bootstrap>
        <address>0x8000</address>
    </bootstrap>

    <locations>
        <!-- key input -->
        <key_input>0xfca6</key_input>

        <elfosboot>0x892d</elfosboot>
    </locations>

    <iogroup>
        <out mask="0xf0">2</out>
    </iogroup>

    <frontpanel init="on">
        <out>4</out>
        <in>4</in>
        <ef type="in">4</ef>
        <size>507, 459</size>
        <item>
            <type>png</type>
            <filename dirname="images">Elf2K.png</filename>
        </item>
        <item>
            <type form="elf2k_power">switch</type>
            <function>stop</function>
            <init>down</init>
            <pos>480, 71</pos>
        </item>
        <item>
            <type form="311">til</type>
            <value>0</value>
            <function>datatil</function>
            <pos>301, 354</pos>
        </item>
        <item>
            <type form="311">til</type>
            <value>1</value>
            <function>datatil</function>
            <pos>337, 354</pos>
        </item>
        <item>
            <type form="311">til</type>
            <value>0</value>
            <function>addresstil</function>
            <pos>147, 354</pos>
        </item>
        <item>
            <type form="311">til</type>
            <value>1</value>
            <function>addresstil</function>
            <pos>182, 354</pos>
        </item>
        <item>
            <type form="311">til</type>
            <value>2</value>
            <function>addresstil</function>
            <pos>217, 354</pos>
        </item>
        <item>
            <type form="311">til</type>
            <value>3</value>
            <function>addresstil</function>
            <pos>252, 354</pos>
        </item>
        <item>
            <type form= "realorange">led</type>
            <function>qled</function>
            <pos>50, 354</pos>
        </item>
        <item>
            <type form= "realred">led</type>
            <function>runled</function>
            <pos>48, 309</pos>
        </item>
        <item>
            <type form= "realgreen">led</type>
            <function>loadled</function>
            <pos>51, 333</pos>
        </item>
        <item>
            <type form= "realorange">led</type>
            <value>1</value>
            <function cycle="show">cpustateled</function>
            <pos>50, 379</pos>
        </item>
        <item>
            <type form= "realorange">led</type>
            <value>0</value>
            <function cycle="show">cpustateled</function>
            <pos>50, 401</pos>
        </item>
    </frontpanel>

    <memory>
        <rom type="gui" mask="0xffff">
            <start>0x8000</start>
            <end>0xFFFF</end>
            <pulldown mask="Elf2Kv*.*">Elf2K</pulldown>
            <filename verify="true">Elf2Kv112.bin</filename>
        </rom>

        <nvram type="gui">
            <start>0x0000</start>
            <end>0x7FFF</end>
            <dump>ramdump.bin</dump>
        </nvram>
    </memory>
    
    <disk type="ide">
        <filename>elf2k.ide</filename>
        <out type="select">2</out>
        <out type="write">3</out>
        <in type="status">2</in>
        <in type="read">3</in>
        <tracks>512</tracks>
        <heads>4</heads>
        <sectors>26</sectors>
        <iogroup>0</iogroup>
    </disk>
    
    <rtc type="ds12887">
       <out type="select">2</out>
       <out type="write">3</out>
       <in>3</in>
       <iogroup>0x80, 0x90</iogroup>
    </rtc>

    <video type="intel8275">
        <font>intel8275.bin</font>
        <zoom>1</zoom>
        <out type="command">5</out>
        <out type="parameter">1</out>
        <in type="status">5</in>
        <in type="parameter">1</in>
        <ef>1</ef>
        <clock>12</clock>
        <char>8x10</char>
        <screen>80x24</screen>
        <interlace />
        <border>0x0</border>
        <color type="fore">0, 0xe0, 0</color>
        <color type="back">0, 0x40, 0</color>
        <color type="high">0, 0xff, 0</color>
    </video>

    <keyboard type="ps2-89C4051">
        <out>7</out>
        <in>7</in>
        <ef>2</ef>
        <startup>KB2</startup>
        <jp4 />
    </keyboard>

    <debugger>
        <scrt mode="on">
            <call reg="4">0xFA7B</call>
            <return reg="5">0xFA8D</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0</code_start>
            <code_end>0xFFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>
