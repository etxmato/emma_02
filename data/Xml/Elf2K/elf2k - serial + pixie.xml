<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Cosmac Elf 2000 - Serial VT + Pixie</name>
        <clock>3.5795</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf2K</dirname>
    </system>

    <iogroup>
        <out mask="0x90">2</out>
    </iogroup>

    <bootstrap>
        <address>0x8000</address>
    </bootstrap>

    <hexmodem>
    </hexmodem>

    <locations>
        <!-- key input -->
        <key_input>0xfca6</key_input>

        <elfosboot>0x892d</elfosboot>
        
        <start_xmodem_save address="0x80, 0x81, 0x82, 0x234d" value="0x78, 0x73, 0, 0x3d">0x20da</start_xmodem_save> <!-- xs -->
        <start_ymodem_save address="0x80, 0x81, 0x82" value="0x79, 0x73, 0">0x2186</start_ymodem_save> <!-- ys -->

        <start_xmodem_load address="0x80, 0x81, 0x82, 0x234b" value="0x78, 0x72, 0, 0x3d">0x20bd</start_xmodem_load> <!-- xr -->
        <start_xmodem_load address="0x80, 0x81, 0x82, 0x2681" value="0x79, 0x72, 0, 0x35">0x207E</start_xmodem_load> <!-- yr -->
        
        <start_chip8 info="0x201d" address="0x201c, 0x201d, 0x201e, 0x206f" value="0xd4, 0x96, 0xb7, 0x05">0x2300</start_chip8>
        <start_chip8 info="0x2020" address="0x201f, 0x2020, 0x2021, 0x206f" value="0xd4, 0x96, 0xb7, 0x05">0x2300</start_chip8>

    </locations>
    
    <frontpanel type="elf2k" init="off">
        <out>4</out>
        <in>4</in>
        <ef type="in">4</ef>
    </frontpanel>

    <memory>
        <rom mask="0xffff">
            <start>0x8000</start>
            <end>0xFFFF</end>
            <filename verify="true">Elf2Kv112.bin</filename>
        </rom>

        <nvram>
            <start>0x0000</start>
            <end>0x7FFF</end>
            <filename>ramdump.bin</filename>
        </nvram>
    </memory>
    
    <disk type="ide">
        <filename>elf2k.ide</filename>
        <out type="select">2</out>
        <out type="write">3</out>
        <in type="status">2</in>
        <in type="read">3</in>
        <tracks>512</tracks>
        <heads>4</heads>
        <sectors>26</sectors>
        <iogroup>0</iogroup>
    </disk>
    
    <vt type="vt100" connection="serial">
        <font>vt100.bin</font>
        <out>7</out>
        <ef>3</ef>
        <q></q>
        <baud type="receive">4800</baud>
        <baud type="transmit">4800</baud>
        <border>0x0</border>
        <color type="fore">0, 255, 0</color>
        <color type="back">0, 0x40, 0</color>
        <color type="high">0, 0xff, 0</color>
    </vt>

    <video type="pixie">
        <out>1</out>
        <in>1</in>
        <ef>1</ef>
        <border>33x33</border>
        <color type="fore">255, 255, 255</color>
        <color type="back">0, 0, 0</color>
     </video>

    <rtc type="ds12887">
       <out type="select">2</out>
       <out type="port">3</out>
       <in>3</in>
       <iogroup>0x80, 0x90</iogroup>
    </rtc>
    
    <debugger>
        <scrt mode="on">
            <call reg="4">0xFA7B</call>
            <return reg="5">0xFA8D</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0</code_start>
            <code_end>0xFFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>
