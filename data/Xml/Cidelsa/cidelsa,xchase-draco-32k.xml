<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Cidelsa</name>
        <config>Xchase on Draco HW, 32K ROM</config>
        <clock>3.579</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <statusbar>cidelsa</statusbar>
        <dirname>Cidelsa</dirname>
    </system>

     <memory>
         <rom>
             <start>0</start>
             <end>0x7FFF</end>
             <filename verify="true">Xchase_draco_32K.hex</filename>
         </rom>

         <mainram>
            <start>0x8000</start>
            <end>0x83FF</end>
        </mainram>
    </memory>
  
    <video type="1870">
        <pagesize type="ram">0x7ff</pagesize>
        <charsize type="ram">0x7ff</charsize>
        <pcbmask>0xff</pcbmask>
        <maxcharlines>8</maxcharlines>
        <maxscreenlines>27</maxscreenlines> <!-- 24, 25 or 27 for Cidelsa DRACO) -->
        <mode>ntsc</mode>
        <ef type="display" pol="rev" write="enable">1</ef>
        <clock>5.626</clock>
        <colorram type="cidelsa" />
        <rotate />
    </video>

    <dip>
        <in>2</in>
        <value>0xe</value>
    </dip>
   
    <efbuttons>
        <pressed>0</pressed>
        <ef2>13</ef2>
        <ef3>66</ef3>
        <ef4>65</ef4>
    </efbuttons>

    <bitkeypad pad="a">
        <in>1</in>
        <bit0>49</bit0>     <!-- 1 player -->
        <bit1>50</bit1>     <!-- 2 player -->
        <bit3>84</bit3>     <!-- T = Tilt -->
        <bit5>32</bit5>     <!-- space / fire -->
    </bitkeypad>

    <bitkeypad pad="b">
        <in>4</in>
        <bit0>73</bit0>     <!-- I = up 2 -->
        <bit1>77</bit1>     <!-- M = down 2 -->
        <bit2>75</bit2>     <!-- K = right 2 -->
        <bit3>74</bit3>     <!-- J = left 2 -->
        <bit4>315</bit4>    <!-- up 1 -->
        <bit5>317</bit5>    <!-- down 1 -->
        <bit6>316</bit6>    <!-- right 1 -->
        <bit7>314</bit7>    <!-- left 1 -->
    </bitkeypad>

    <debugger>
        <scrt mode="on">
            <call reg="4">0x41a1</call>
            <return reg="5">0x41b1</return>
        </scrt>
        
        <assembler>
            <filename>xchase</filename>
            <code_start>0</code_start>
            <code_end>0x7FFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>
