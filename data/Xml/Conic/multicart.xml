<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Conic (Apollo, Mustang, MPT-02 and M1200)</name>
        <config>40th Anniversary Multi-Cart, with system rom activated</config>
        <clock>1.76</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Conic</dirname>
    </system>
    
    <frontpanel init="on">
        <size>315, 135</size>
        <item>
            <type>rot</type>
            <pos>70, 30</pos>
            <value>1</value>
            <function>ems</function>
        </item>
        <item>
            <type>text</type>
            <label size="12">MSB</label>
            <pos>18, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">0x-Fx</label>
            <pos>12, 75</pos>
        </item>
        <item>
            <type>rot</type>
            <pos>170, 30</pos>
            <value>0</value>
            <function>ems</function>
        </item>
        <item>
            <type>text</type>
            <label size="12">LSB</label>
            <pos>266, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">x0-xF</label>
            <pos>256, 75</pos>
        </item>
    </frontpanel>
    
    <memory mask="0xfff">
        <guirom>
            <start>0</start>
            <end>0x3ff</end>
            <pulldown mask="*conic_pal*.bin">Conic</pulldown>
            <filename>conic_pal.bin</filename>
        </guirom>

        <ems type="multicart">
            <start>0</start>
            <end>0</end>
            <start2>0x400</start2>
            <end2>0x7ff</end2>
            <start3>0xc00</start3>
            <end3>0xfff</end3>
            <filename>39sf040.auto.bin</filename>
        </ems>

        <ram>
            <start>0x800</start>
            <end>0x9ff</end>
        </ram>
    </memory>
    
    <video type="1864">
        <in type="on">1</in>
        <out type="back">1</out>
        <out type="tone">4</out>
        <ef>1</ef>
        <colorram>0xb00-0xbff</colorram>
        <height>192</height>
        <graphics>
            <interrupt>74</interrupt>
            <start>76</start>
            <end>267</end>
            <screenend>312</screenend>
        </graphics>
        <border>32x32</border>
        <xscale>4</xscale>
        <colortype>vic</colortype>
        <color type="white">255, 255, 255</color>
        <color type="red">255, 0, 0</color>
        <color type="blue">0, 0, 255</color>
        <color type="magenta">255, 0, 255</color>
        <color type="green">0, 255, 0</color>
        <color type="yellow">255, 255, 0</color>
        <color type="cyan">0, 255, 255</color>
        <color type="black">20, 20, 20</color>
        <color type="back_blue">0, 0, 128</color>
        <color type="back_black">0, 0, 0</color>
        <color type="back_green">0, 128, 0</color>
        <color type="back_red">128, 0, 0</color>
     </video>

    <keypad type="latch" pad="1">
        <out mask="0x0f">2</out>
        <ef pol="rev">3</ef>
        <auto>on</auto>

        <keydef type="file" check="rom">keydefinition_studio.txt</keydef>
        
        <diagonal key1="2" key2="4">1</diagonal>
        <diagonal key1="2" key2="6">3</diagonal>
        <diagonal key1="4" key2="8">7</diagonal>
        <diagonal key1="6" key2="8">9</diagonal>
    </keypad>

    <keypad type="latch" pad="2">
        <out mask="0x0f">2</out>
        <ef pol="rev">4</ef>
        <auto>on</auto>

        <diagonal key1="2" key2="4">1</diagonal>
        <diagonal key1="2" key2="6">3</diagonal>
        <diagonal key1="4" key2="8">7</diagonal>
        <diagonal key1="6" key2="8">9</diagonal>
    </keypad>

    <sound type="studio">
    </sound>

    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>coniccart_1</filename>
            <code_start>0x400</code_start>
            <code_end>0x7FF</code_end>
        </assembler>

        <assembler>
            <filename>coniccart_2</filename>
            <code_start>0xC00</code_start>
            <code_end>0xFFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>

