<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Cosmicos - COSmac MIcro COmputer System</name>
        <config>Bare</config>
        <clock>1.75</clock>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Cosmicos</dirname>
    </system>

    <frontpanel type="cosmicos" init="on">
        <out>7</out>
        <in>7</in>
        <ef type="in">4</ef>
        <til type="full">313</til>
    </frontpanel>

     <memory>
         <nvram default="off">
            <start>0x0000</start>
            <end>0x00FF</end>
            <filename>ramdump.bin</filename>
        </nvram>

         <guirom>
             <start>0xC000</start>
             <end>0xC7FF</end>
             <pulldown mask="*.bin" exclude1="vt" exclude2="ramdump.bin">Cosmicos</pulldown>
         </guirom>
    </memory>
    
    <cassette decks="1">
        <ef>2</ef>
    </cassette>
    
    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0</code_start>
            <code_end>0xFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>
