<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>FRED 1.5</name>
        <config>Tape Software</config>
        <clock>1.00</clock>
        <cpu>1801</cpu>
        <boot dma="zero">0</boot>
        <dma_in>reset</dma_in>
        <init ef="1">1</init>
        <init ef="2">1</init>
        <init ef="3">1</init>
        <init ef="4">1</init>
        <dirname>FRED1_5</dirname>
    </system>

    <gui>
        <memaccess>
            <location>on</location>
            <start>0</start>
        </memaccess>
        <auto>on</auto>
        <turbo>off</turbo>
    </gui>

    <splash>
        <text>Save/load software, to load a program from tape press 0, code will be&#xD;loaded at address hex 100. To save memory to tape press C (memory hex&#xD;100-7FF will be saved to tape).</text>
    </splash>

    <iogroup>
        <out>1</out>
    </iogroup>

    <frontpanel init="on">
        <size>310, 180</size>
        <item>
            <type size="small">push</type>
            <function type="full">reset</function>
            <label></label>
            <pos>35, 60</pos>
            <size>25, 25</size>
        </item>
        <item>
            <type>text</type>
            <label size="12">RESET</label>
            <pos>20, 88</pos>
        </item>
        <item>
            <type size="small">push</type>
            <function type="boot">run</function>
            <label></label>
            <pos>85, 60</pos>
            <size>25, 25</size>
        </item>
        <item>
            <type>text</type>
            <label size="12">RUN</label>
            <pos>80, 88</pos>
        </item>
        <item>
            <type>switch</type>
            <function>read</function>
            <init>down</init>
            <pos>135, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">READ</label>
            <pos>125, 88</pos>
        </item>
        <item>
            <type>switch</type>
            <function>cardswitch</function>
            <init>down</init>
            <pos>185, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">CARD</label>
            <pos>175, 88</pos>
        </item>
       <item>
            <type>switch</type>
            <function>stop</function>
            <init>up</init>
            <pos>235, 60</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">OFF</label>
            <pos>232, 88</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">STOP</label>
            <pos>42, 138</pos>
        </item>
        <item>
            <type>led</type>
            <function>stopled</function>
            <pos>55, 160</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">READY</label>
            <pos>120, 138</pos>
        </item>
        <item>
            <type>led</type>
            <function>readyled</function>
            <pos>140, 160</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">ERROR</label>
            <pos>205, 138</pos>
        </item>
        <item>
            <type>led</type>
            <function>errorled</function>
            <pos>225, 160</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">0</label>
            <pos>262, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>0</value>
            <function load="show">bitled</function>
            <pos>262, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">1</label>
            <pos>228, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>1</value>
            <function load="show">bitled</function>
            <pos>228, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">2</label>
            <pos>194, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>2</value>
            <function load="show">bitled</function>
            <pos>194, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">3</label>
            <pos>160, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>3</value>
            <function load="show">bitled</function>
            <pos>160, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">4</label>
            <pos>126, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>4</value>
            <function load="show">bitled</function>
            <pos>126, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">5</label>
            <pos>92, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>5</value>
            <function load="show">bitled</function>
            <pos>92, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">6</label>
            <pos>58, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>6</value>
            <function load="show">bitled</function>
            <pos>58, 15</pos>
        </item>
        <item>
            <type>text</type>
            <label size="12">7</label>
            <pos>24, 35</pos>
        </item>
        <item>
            <type>led</type>
            <value>7</value>
            <function load="show">bitled</function>
            <pos>24, 15</pos>
        </item>
    </frontpanel>

    <memory>
        <ram type="gui" mask="0xfff">
            <start>0x0000</start>
            <end>0xFFFF</end>
            <pulldown mask="Tape Software*.bin">FRED1_5</pulldown>
            <filename>Tape Software [AUD_2464_09_B41_ID33_02].bin</filename>
        </ram>
    </memory>
    
    <keypad type="fred">
        <iogroup>1</iogroup>
        <out>2</out>
        <in type="key" mode="1">0</in>
        <in type="coin">6</in>
        <ef type="key" mode="1">1</ef>
        <ef type="fireb">3</ef>
        <ef type="coin">4</ef>
        <mode>hex</mode>
    </keypad>

    <video type="fred">
        <iogroup>2</iogroup>
        <out>2</out>
        <border>33x33</border>
        <color type="fore">255, 255, 255</color>
        <color type="back">0, 0, 0</color>
     </video>

    <cassette type="fred">
        <iogroup>3</iogroup>
        <stoptone />
        <ef type="in" mode="2">1</ef>
        <ef type="run">2</ef>
        <ef type="error">4</ef>
        <in mode="2">0</in>
        <out type="mode">2</out>
        <out type="sound">3</out>
        <freq type="0">5200</freq>
        <freq type="1">6200</freq>
        <databits>8</databits>
        <threshold type="8bit">10</threshold>
        <threshold type="16bit">500</threshold>
        <threshold type="24bit">1000</threshold>
    </cassette>

    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>fred.bin</filename>
            <code_start>0</code_start>
            <code_end>0xFFF</code_end>
        </assembler>
    </debugger>

    <locations>
        <stop_cas>0xae</stop_cas>
        <fred_tape_rec>0x6f</fred_tape_rec>
    </locations>
    
</emmaconfig>
