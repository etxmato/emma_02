<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Elf</name>
        <config>UT4, Serial I/O</config>
        <!-- Press return to start UT4 -->
        <clock>1.76</clock>
        <boot>0x8000</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf</dirname>
    </system>
    
    <frontpanel type="io">
        <in>4</in>
        <ef type="in">4</ef>
    </frontpanel>

    <cassette decks="1">
        <ef>2</ef>
    </cassette>

    <memory>
        <rom type="gui">
            <start>0x8000</start>
            <end>0x81FF</end>
            <pulldown mask="ut4*.*">Elf</pulldown>
            <filename verify="true">ut4.hex</filename>
        </rom>

        <ram type="gui">
            <start>0</start>
            <end>0x7FFF</end>
        </ram>

    </memory>
    
    <vt type="vt100" connection="serial">
        <font>vt100.bin</font>
        <out>5</out>
        <ef>4</ef>
        <q></q>
        <caps />
        <baud type="receive">300</baud>
        <baud type="transmit">300</baud>
        <border>0x0</border>
        <color type="fore">0, 255, 0</color>
        <color type="back">0, 0x40, 0</color>
        <color type="high">0, 0xff, 0</color>
    </vt>

    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0</code_start>
            <code_end>0xFFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>

