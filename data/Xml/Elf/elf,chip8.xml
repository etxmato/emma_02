<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Elf, Chip 8 - use RAM button to select Chip-8 software</name>
        <!-- use RAM button to select CHIP 8 game -->
        <clock>1.76</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf</dirname>
    </system>
    
    <memory>
        <ram>
            <start>0</start>
            <end>0x1FF</end>
            <filename>chip8.hex</filename>
        </ram>

        <mainram>
            <start>0x200</start>
            <end>0xFFFF</end>
            <dirname>Chip-8</dirname>
        </mainram>

    </memory>
    
    <video type="pixie">
        <out>1</out>
        <in>1</in>
        <ef>1</ef>
        <border>33x33</border>
        <color type="fore">255, 255, 255</color>
        <color type="back">0, 0, 0</color>
     </video>

    <frontpanel>
        <in>4</in>
        <ef type="ready">3</ef>
    </frontpanel>

    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0x200</code_start>
            <code_end>0xFFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>

