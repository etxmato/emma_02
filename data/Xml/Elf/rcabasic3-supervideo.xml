<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Elf</name>
        <config>RCA Basic 3, Super Video</config>
        <!-- Press return, C to start BASIC in Cold mode -->
        <clock>1.76</clock>
        <boot>0x2200</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf</dirname>
    </system>
    
    <splash>
        <dialog>RCA_BASIC</dialog>
    </splash>

    <memory>
        <ram type="gui">
            <start>0x0000</start>
            <end>0xF0FF</end>
            <pulldown mask="rca.basic3.*.*">Elf</pulldown>
            <filename verify="true">rca.basic3.v1.1.hex</filename>
        </ram>

        <rom type="gui">
            <start>0xF100</start>
            <end>0xFFFF</end>
            <pulldown mask="bios+*.*">Elf</pulldown>
            <filename verify="true">bios+biosiov93.rom</filename>
        </rom>
    </memory>
    
    <video type="mc6845">
        <ram>0xE000-0xE7FF</ram>
        <font>super.video.bin</font>
        <screen>64x16</screen>
        <char>7x8</char>
        <interlace />
    </video>

    <keyboard type="ascii">
        <in>5</in>
        <ef>4</ef>
        <caps />
    </keyboard>

    <printer>
        <out>3</out>
    </printer>
    
    <basic>
        <pload>rca</pload>
        <defus>0x5281</defus>
        <eop>0x5283</eop>
        <string>0x5292</string>
        <array>0x5294</array>
        <eod>0x5299</eod>
        <ram>0x5400</ram>
    </basic>

    <locations>
        <!-- key input -->
        <key_input>0x2257, 0xf1be, 0xf63d</key_input>

        <!-- Machine states -->
        <reset_state command="&#xD;C">0xf1be</reset_state>
        <basic_state_cw command="C">0x2211</basic_state_cw>
        <basic_state>0x2257</basic_state>
        <run_state>0x3276</run_state>

    </locations>

    <debugger>
        <scrt mode="on">
            <call reg="4">0x41E8</call>
            <return reg="5">0x37F2</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0x5400</code_start>
            <code_end>0x73ff</code_end>
        </assembler>
    </debugger>

</emmaconfig>

