<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Elf, Quest Superbasic 3.0 - Super Video</name>
        <!-- Press C to start BASIC in Cold mode -->
        <clock>1.76</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf</dirname>
    </system>
    
    <memory>
        <mainram>
            <start>0x0000</start>
            <end>0xDFFF</end>
            <filename verify="true">superbasic.3.0.bin</filename>
        </mainram>
    </memory>
    
    <video type="mc6845">
        <ram>0xE000-0xE7FF</ram>
        <font>super.video.bin</font>
        <screen>64x16</screen>
        <char>7x8</char>
        <interlace />
    </video>

    <keyboard type="ascii">
        <in>5</in>
        <ef>2</ef>
        <caps />
    </keyboard>

    <printer>
        <out>3</out>
    </printer>

    <cassette decks="1">
        <ef>3</ef>
        <filename></filename>
    </cassette>
    
    <basic>
        <pload>super</pload>
        <defus>0x2f81</defus>
        <eop>0x2f83</eop>
        <string>0x2f92</string>
        <array>0x2f94</array>
        <eod>0x2f99</eod>
        <ram>0x3100</ram>
    </basic>

    <batchwav>
        <command>psave</command>
    </batchwav>

    <locations>
        <!-- key input -->
        <key_input>0x2e09, 0x37</key_input>

        <!-- Machine states -->
        <basic_state>0x37</basic_state>
        <run_state>0x0cdc, 0x03d8</run_state>

        <!-- Stop cassette -->
        <stop_cas>0x37</stop_cas>
        
        <!-- Start PSAVE, DSAVE, PLOAD, DLOAD -->
        <start_cas_save>0x2b06, 0x2b09</start_cas_save>
        <start_cas_load>0x2b00</start_cas_load>
        <start_cas_dload>0x2b03</start_cas_dload>

        <!-- Save start/end during batch conversion -->
        <batch_start_save>0x2e09</batch_start_save>
        <batch_end_save>0x37</batch_end_save>
        
    </locations>

</emmaconfig>

