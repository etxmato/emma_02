<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Elf</name>
        <config>Music Machine, O Christmas Tree</config>
        <clock>1</clock>
        <boot>0</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf/Music</dirname>
    </system>
    
    <memory> 
        <guiram mask="0xFF">
            <start>0</start>
            <end>0xFFFF</end>
            <pulldown mask="*.hex" exclude="Music Machine">Elf/Music</pulldown>
            <filename>O Christmas Tree.hex</filename>
            <filename>Music Machine.hex</filename>
        </guiram>
    </memory>
    
    <sound type="q">
        <hw>250</hw>
    </sound>

    <frontpanel type="io">
        <in>4</in>
        <ef type="in">4</ef>
    </frontpanel>

    <debugger>
        <scrt mode="off">
            <call reg="4">-1</call>
            <return reg="5">-1</return>
        </scrt>

        <assembler>
            <filename>music-machine</filename>
            <code_start>0</code_start>
            <code_end>0x4F</code_end>
        </assembler>
    </debugger>

</emmaconfig>

