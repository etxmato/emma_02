<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Elf</name>
        <config>RCA Bug, Serial I/O</config>
        <!-- Press return to start RCA Bug -->
        <clock>1.76</clock>
        <boot>0x3800</boot>
        <init ef="1">1</init>
        <init ef="2">1</init>
        <init ef="3">1</init>
        <init ef="4">1</init>
        <dirname>Elf</dirname>
    </system>
    
    <frontpanel type="io">
        <in>4</in>
    </frontpanel>

    <memory>
        <rom type="gui">
            <start>0x3800</start>
            <end>0x3BFF</end>
            <pulldown mask="RCABug*.*">Elf</pulldown>
            <filename verify="true">RCABug.hex</filename>
        </rom>

        <ram type="gui">
            <start>0</start>
            <end>0x37FF</end>
        </ram>

        <ram>
            <start>0x3C00</start>
            <end>0xFFFF</end>
        </ram>
    </memory>
    
    <vt type="vt100" connection="serial">
        <font>vt100.bin</font>
        <out>7</out>
        <ef >1</ef>
        <q pol="rev"></q>
        <caps />
        <baud type="receive">600</baud>
        <baud type="transmit">600</baud>
        <border>0x0</border>
        <color type="fore">0, 255, 0</color>
        <color type="back">0, 0x40, 0</color>
        <color type="high">0, 0xff, 0</color>
    </vt>

    <debugger>
        <scrt mode="on">
            <call reg="4">0x3852</call>
            <return reg="5">0x3869</return>
        </scrt>

        <assembler>
            <filename>RCABug</filename>
            <code_start>0x3800</code_start>
            <code_end>0x3BFF</code_end>
        </assembler>
    </debugger>

</emmaconfig>

