<?xml version="1.0"?>
<!DOCTYPE emmaconfig SYSTEM "emma02.dtd">

<emmaconfig>
    
    <system>
        <name>Elf, RCA Basic 3 - Serial I/O</name>
        <!-- Press return, C to start BASIC in Cold mode -->
        <clock>1.76</clock>
        <boot>0x2200</boot>
        <init type="ef1">1</init>
        <init type="ef2">1</init>
        <init type="ef3">1</init>
        <init type="ef4">1</init>
        <dirname>Elf</dirname>
    </system>
    
    <frontpanel>
        <in>4</in>
    </frontpanel>

    <memory>
        <mainram>
            <start>0x0000</start>
            <end>0xF0FF</end>
            <filename verify="true">rca.basic3.v1.1.hex</filename>
        </mainram>

        <rom>
            <start>0xF100</start>
            <end>0xFFFF</end>
            <filename verify="true">bios+biosiov93.rom</filename>
        </rom>
    </memory>
    
    <vt type="vt100" connection="serial">
        <font>vt100.bin</font>
        <out>5</out>
        <ef>2</ef>
        <q></q>
        <caps />
        <baud type="receive">3600</baud>
        <baud type="transmit">3600</baud>
        <border>0x0</border>
        <color type="fore">0, 255, 0</color>
        <color type="back">0, 0x40, 0</color>
        <color type="high">0, 0xff, 0</color>
    </vt>

    <printer>
        <out>3</out>
    </printer>

    <basic>
        <pload>rca</pload>
        <defus>0x5281</defus>
        <eop>0x5283</eop>
        <string>0x5292</string>
        <array>0x5294</array>
        <eod>0x5299</eod>
        <ram>0x5400</ram>
    </basic>

    <locations>
        <!-- key input -->
        <key_input>0x2257, 0xfc98</key_input>

        <!-- Machine states -->
        <reset_state>0xfc19</reset_state>
        <basic_state>0x2257</basic_state>
        <run_state>0x3276</run_state>
        
    </locations>

    <debugger>
        <scrt mode="on">
            <call reg="4">0x41E8</call>
            <return reg="5">0x37F2</return>
        </scrt>

        <assembler>
            <filename>mycode</filename>
            <code_start>0x5400</code_start>
            <code_end>0x73ff</code_end>
        </assembler>
    </debugger>

</emmaconfig>

